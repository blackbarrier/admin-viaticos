{% extends 'base.html.twig' %}

{% block title %}Info Repartición{% endblock %}

{% block body %}

    <div id="loaderB"></div>
    <div class="card" style="overflow:auto">
    
        <div class="card-header">
            <div class="row">

                {% set arrayRoles = app.user.fetchRoles() %}
                {% if 'ROLE_SUPER_ADMIN' in arrayRoles %}

                <div class="col-sm-8">
                    <h3><i class="fa fa-institution"></i>&nbsp; <b>Info repartición</b></h3>
                    <p class="text-muted h6 m-b-10 mt-3">Se muestran todos los datos de la reparticion</p>
                </div>
                
                <div class="col-sm-2">
                    <a href="{{ path('app_info_reparticion_edit', {'id': info_reparticion.id}) }}">
                        <button class="btn btn-inverse btn-inverse-jag btn-inverse-jag btn-outline-inverse" style="width: 100%;">
                            <i class="ti-pencil"></i>&nbsp;Editar</button></a>                            
                </div>

                <div class="col-sm-2">
                    <a href="{{path('app_info_reparticion_index')}}">
                        <button class="btn btn-inverse btn-inverse-jag btn-inverse-jag btn-outline-inverse" style="width: 100%;">
                            <i class="ti-back-left"></i>&nbsp;Volver</button></a>
                </div>

                {% else %}

                <div class="col-sm-10">
                    <h3><i class="fa fa-institution"></i>&nbsp; <b>Info repartición</b></h3>
                    <p class="text-muted h6 m-b-10 mt-3">Se muestran todos los datos de la reparticion</p>
                </div>
                
                <div class="col-sm-2">
                    <a href="{{ path('app_info_reparticion_edit', {'id': info_reparticion.id}) }}">
                        <button class="btn btn-inverse btn-inverse-jag btn-inverse-jag btn-outline-inverse" style="width: 100%;">
                            <i class="ti-pencil"></i>&nbsp;Editar</button></a>
                </div>
                
                {% endif %}
    
            </div>
        </div>
    
        <br>
        <div class="card-block">
                
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ info_reparticion.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ info_reparticion.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Abreviatura</th>
                        <td>{{ info_reparticion.abreviatura }}</td>
                    </tr>
                    <tr>
                        <th>CUIT</th>
                        <td>{{ info_reparticion.cuit }}</td>
                    </tr>
                    <tr>
                        <th>Rotulo</th>
                        <td>{{ info_reparticion.rotulo }}</td>
                    </tr>
                  
                    <tr>
                        <th>Sucursal</th>
                        <td>{{ info_reparticion.sucursal }}</td>
                    </tr>
                
                    <tr>
                        <th>Número de cuenta</th>
                        <td>{{ info_reparticion.numeroCuenta }}
                        </td>
                    </tr>
                    <tr>
                        <th>Dígito</th>
                        <td>{{ info_reparticion.digito }}
                        </td>
                    </tr>
                    <tr>
                        <th>CBU</th>
                        <td>{{ info_reparticion.cbu }}
                        </td>
                    </tr>
                   
                </tbody>
            </table>
            
                
          
            
            
            
            
            {# {{ include('admin_reparticion/_delete_form.html.twig') }} #}
    
    
    
        </div>
    
{% endblock %}
