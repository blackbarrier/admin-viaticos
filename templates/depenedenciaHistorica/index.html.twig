{% extends "base.html.twig" %}

{% block title %}Dependencias Históricas {%  endblock %}

{% block stylehseets %}
    {{ parent() }}
{%  endblock %}

{%  block body %}
    <div class="card -p3">
        <div class="card-header">
            <div class="row">
                <div class="col-md-9">
                    <h4>Listado de Dependencias Históricas registradas en el sistema</h4>
                    <label style="font-weight:bold; color:dimgray;">Aquí figuran las dependencias que pasaron a ser históricas, ya sea por edición, cambio o eliminación.</label>
                </div>
                <div class="col" style="dislay:flex; flex-direction:column; justify-content:center; align-items:center;">
                    
                </div>
            </div>
        </div>
        <div class="card-block">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>id Interno</th>
                        <th>Nombre</th>
                        <th>Codigo GDEBA</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for dependencia in dependencias %}
                        <tr>
                            <td>#&nbsp;{{ dependencia.id }}</td>
                            <td>{{ dependencia.nombre|raw }}</td>
                            <td>{{ dependencia.codigoGDEBA }}</td>
                            <td>
                                <a href="{{ path('app_dependnecia_historica_detalles',{"id":dependencia.id}) }}">
                                    <button class="btn btn-inverse btn-inverse-jag btn-inverse-jag btn-outline-inverse">
                                        <i class="fa-solid fa-eye"></i>&nbsp;Ver detalles
                                    </button>
                                </a>
                            </td>
                        </tr>
                    {%  endfor %}
                </tbody>
            </table>
        </div>
    </div>
{%  endblock %}

{%  block javascripts %}
    {{ parent() }}
    <script>
         $(document).ready(function () {
                $('.table').DataTable({
                    "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ Dependencias",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando plantillas del _START_ al _END_ de un total de _TOTAL_ Dependencias",
                    "sInfoEmpty": "Mostrando plantillas del 0 al 0 de un total de 0 Dependencias",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ Dependencias)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                }
            });

            }, 500);    

    </script>
{%  endblock %}