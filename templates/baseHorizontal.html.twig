        {# script que ejecuta los flash msg al cargarlos #}
        <script>
            $( document ).ready(function() {
                {% for label, messages in app.flashes %}
                new PNotify({
                    {% for message in messages %}
                    type:'{{ label }}',
                    text: '<span style="font-size: 1.5em;">{{ message }}</span>',
                    textTrusted: true,
                    {% if label=="success" %}
                    title: 'OK',
                    {% endif %}
                    {% if label=="error" %}
                    title: 'Error'  ,
                    {% endif %}
                    delay: 4000,

                    {% endfor %}
                });
                {% endfor %}
            });
            $(".modalClose").on("click", function(){
                modalFadeOut();
            });
